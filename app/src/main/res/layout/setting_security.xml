<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">


    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp">

        <!--배경-->

        <ImageView
            android:layout_width="400dp"
            android:layout_height="230dp"
            android:onClick="mOnClick"
            android:src="@drawable/edittext_img"/>

        <ImageView
            android:layout_width="400dp"
            android:layout_height="230dp"
            android:layout_marginTop="80dp"
            android:onClick="mOnClick"
            android:src="@drawable/edittext_img"/>

        <!--화살표-->

        <ImageView
            android:id="@+id/idpw_change_ck"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="right"
            android:layout_marginRight="50dp"
            android:onClick="mOnClick"
            android:layout_marginTop="100dp"
            android:src="@drawable/icon_right_24px" />
        <ImageView
            android:id="@+id/unregist_ck"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="right"
            android:layout_marginRight="50dp"
            android:onClick="mOnClick"
            android:layout_marginTop="180dp"
            android:src="@drawable/icon_right_24px" />


        <!--text_img-->

        <ImageView
            android:id="@+id/idpw_change"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:onClick="mOnClick"
            android:layout_marginTop="75dp"
            android:layout_marginLeft="72dp"
            android:src="@drawable/idpw_change"/>
        <ImageView
            android:id="@+id/unregist"
            android:layout_width="100dp"
            android:layout_height="23dp"
            android:onClick="mOnClick"
            android:layout_marginTop="178dp"
            android:layout_marginLeft="55dp"
            android:src="@drawable/unregist"/>

    </FrameLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="30dp"
        android:layout_marginTop="30dp">
        <ImageView
            android:id="@+id/img_backnn1"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/iconblackleft" />
        <TextView
            android:id="@+id/back11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="개인/보안"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="bold" />
    </LinearLayout>


</FrameLayout>