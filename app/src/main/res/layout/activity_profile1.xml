<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#ffffff"
    android:theme="@style/ThemeOverlay.Loginlogin.FullscreenContainer"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="vertical">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitStart"
                android:src="@drawable/pp1"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="50dp">
                <ImageView
                    android:id="@+id/img_back1"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/iconwhiteleft" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:gravity="center_horizontal"
                    android:text="MY PROFILE"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="15dp"
                    android:textStyle="bold" />
            </LinearLayout>


            <ImageView
                android:id="@+id/img_setting"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="right"
                android:layout_marginTop="30dp"
                android:onClick="mOnClick"
                android:layout_marginRight="40dp"
                android:src="@drawable/settingicon" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="70dp"
                android:layout_marginRight="20dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="230dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/arish_logo_ver2" />


                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">


                    <ImageView
                        android:layout_width="260dp"
                        android:layout_height="70dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="50dp"
                        android:src="@drawable/main1logo" />

                    <TextView
                        android:id="@+id/tv_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="30dp"
                        android:layout_marginRight="8dp"
                        android:text=""
                        android:textColor="@color/white"
                        android:textSize="20dp" />


                    <ImageView
                        android:layout_width="360dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="80dp"
                        android:src="@drawable/profile1box" />

                    <ImageView
                        android:id="@+id/img_favorite"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="30dp"
                        android:layout_marginRight="70dp"
                        android:onClick="mOnClick"
                        android:src="@drawable/icon_action_favorite" />

                    <ImageView
                        android:id="@+id/img_ticket_book"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="70dp"
                        android:layout_marginTop="30dp"
                        android:onClick="mOnClick"
                        android:src="@drawable/icon_bookmark" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="60dp"
                        android:layout_marginRight="70dp"
                        android:text="MY LINE"
                        android:textColor="@color/black"
                        android:textSize="12dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="70dp"
                        android:layout_marginTop="60dp"
                        android:onClick="mOnClick"
                        android:text="MY TICKET BOOK"
                        android:textColor="@color/black"
                        android:textSize="12dp"
                        android:textStyle="bold" />


                </FrameLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:text="MY SCHEDULE"
                    android:textColor="@color/black"
                    android:textSize="13dp"
                    android:textStyle="bold" />

                <com.prolificinteractive.materialcalendarview.MaterialCalendarView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/calendarView"
                    android:layout_weight="1"
                    app:mcv_selectionColor="#96A5FF"
                    app:mcv_showOtherDates="all"/>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <FrameLayout
                        android:id="@+id/profile2_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="invisible">
                        <ImageView
                            android:id="@+id/profile2_box1"
                            android:layout_width="430dp"
                            android:layout_height="230dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="20dp"
                            android:src="@drawable/profile2_box2"/>
                        <TextView
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity= "center_horizontal"
                            android:id="@+id/diaryTextView"
                            android:layout_marginTop="40dp"
                            android:layout_marginEnd="8dp"
                            android:layout_marginRight="8dp"
                            android:layout_marginLeft="8dp"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="60dp"
                            android:layout_marginTop="80dp"
                            android:orientation="horizontal"
                            >
                            <ImageView
                                android:id="@+id/profile2_memoicon"
                                android:layout_width="22dp"
                                android:layout_height="22dp"
                                android:visibility="visible"
                                android:src="@drawable/profile2_memo"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="50dp"
                                android:layout_marginLeft="5dp"
                                android:layout_marginTop="3dp"
                                android:id="@+id/textView2"
                                android:text="" />
                        </LinearLayout>

                        <androidx.appcompat.widget.AppCompatButton
                            android:text="수정"
                            android:textColor="#FFFFFF"
                            android:background="@drawable/profile2_savebox2"
                            android:layout_gravity="right"
                            android:layout_width="80dp"
                            android:layout_height="40dp"
                            android:layout_marginTop="190dp"
                            android:layout_marginRight="40dp"
                            android:id="@+id/cha_Btn"/>

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/del_Btn"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_gravity="right"
                            android:layout_marginTop="40dp"
                            android:layout_marginRight="50dp"
                            android:background="@drawable/delete_btn"
                            android:textColor="#FFFFFF"/>

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/alarm_Btn"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_gravity="right"
                            android:layout_marginTop="40dp"
                            android:layout_marginRight="80dp"
                            android:background="@drawable/alarm_btn"
                            android:textColor="#FFFFFF"/>
                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity= "right"
                            android:id="@+id/alarmTextView"
                            android:layout_marginTop="65dp"
                            android:layout_marginEnd="8dp"
                            android:layout_marginRight="15dp"
                            android:layout_marginLeft="8dp"
                            android:textSize="7dp"/>


                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/profile_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="invisible">
                        <ImageView
                            android:id="@+id/profile2_box"
                            android:layout_width="430dp"
                            android:layout_height="230dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="20dp"
                            android:src="@drawable/profile2_box2"/>

                        <EditText
                            android:id="@+id/contextEditText"
                            android:layout_width="wrap_content"
                            android:layout_height="100dp"
                            android:layout_gravity="center"
                            android:background="@null"
                            android:ems="10"
                            android:gravity="center"
                            android:hint="일정을 등록하세요."
                            android:textSize="13dp"
                            android:inputType="textMultiLine" />

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/save_Btn"
                            android:layout_width="80dp"
                            android:layout_height="40dp"
                            android:layout_gravity="right"
                            android:layout_marginTop="190dp"
                            android:layout_marginRight="40dp"
                            android:background="@drawable/profile2_savebox"
                            android:text=""
                            android:textColor="#FFFFFF" />

                    </FrameLayout>

                </FrameLayout>
            </LinearLayout>

        </FrameLayout>
    </ScrollView>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom">
        <ImageView
            android:layout_width="400dp"
            android:layout_height="160dp"
            android:src="@drawable/bar_circle"/>
        <ImageView
            android:layout_width="400dp"
            android:layout_height="160dp"
            android:src="@drawable/bar_circle"/>
        <ImageView
            android:layout_width="450dp"
            android:layout_height="160dp"
            android:layout_gravity="right"
            android:alpha="0.4"
            android:src="@drawable/bar_ww"/>
        <ImageView
            android:layout_width="450dp"
            android:layout_height="160dp"
            android:layout_gravity="left"
            android:src="@drawable/bar_ww"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_gravity="bottom"
            android:scaleType="fitEnd"
            android:src="@drawable/bar_nemo2"/>


        <ImageView
            android:id="@+id/home"
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:src="@drawable/homeicon"
            android:layout_gravity="bottom"
            android:onClick="mOnClick"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="50dp"/>
        <ImageView
            android:id="@+id/search"
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:src="@drawable/searchicon"
            android:layout_gravity="bottom"
            android:onClick="mOnClick"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="115dp"/>

        <ImageView
            android:id="@+id/ticket"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/ticketicon2"
            android:layout_gravity="bottom"
            android:onClick="mOnClick"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="155dp"/>
        <ImageView
            android:id="@+id/ticket2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ticketicon"
            android:layout_gravity="bottom"
            android:onClick="mOnClick"
            android:layout_marginBottom="40dp"
            android:layout_marginLeft="171dp"/>
        <ImageView
            android:id="@+id/position"
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:src="@drawable/placeicon"
            android:layout_gravity="bottom"
            android:onClick="mOnClick"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="255dp"/>
        <ImageView
            android:id="@+id/profile_icon"
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:src="@drawable/personicon"
            android:layout_gravity="bottom"
            android:onClick="mOnClick"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="330dp"/>

    </FrameLayout>




</FrameLayout>