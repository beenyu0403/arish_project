<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:theme="@style/ThemeOverlay.Loginlogin.FullscreenContainer"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp">
        <ImageView
            android:id="@+id/img_back9"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_marginLeft="26dp"
            android:src="@drawable/iconblackleft" />
        <TextView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="비밀번호 변경"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="bold" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">
        <ImageView
            android:id="@+id/pw_Edit"
            android:layout_width="400dp"
            android:layout_height="230dp"
            android:layout_marginBottom="90dp"
            android:src="@drawable/edittext_img"/>

        <EditText
            android:id="@+id/change_pw"
            android:layout_marginBottom="50dp"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:maxLength="10"
            android:layout_marginLeft="5dp"
            android:hint="비밀번호(영문+숫자+ 포함 5자 이상)"
            android:inputType="textPassword"
            android:textSize="15sp"
            android:background="@drawable/solid_button_st"
            android:layout_marginRight="35dp"/>

        <TextView
            android:id="@+id/pw_notion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="120dp"
            android:paddingLeft="40dp"
            android:text=""
            android:textSize="15dp" />

        <ImageView
            android:id="@+id/pw_edit_ck"
            android:layout_width="400dp"
            android:layout_gravity="center"
            android:layout_height="230dp"
            android:layout_marginTop="60dp"
            android:src="@drawable/edittext_img" />

        <EditText
            android:id="@+id/change_pw2"
            android:layout_marginTop="55dp"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:maxLength="10"
            android:layout_marginLeft="5dp"
            android:hint="비밀번호를 한 번 더 입력해주세요"
            android:inputType="textPassword"
            android:textSize="15sp"
            android:background="@drawable/solid_button_st"
            android:layout_marginRight="35dp"/>

        <TextView
            android:id="@+id/pw_notion2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="20dp"
            android:paddingLeft="40dp"
            android:text=""
            android:textSize="15dp" />


        <ImageView
            android:id="@+id/pw_eye"
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:onClick="mOnClick"
            android:src="@drawable/signuppwicon2"
            android:layout_gravity="right"
            android:layout_marginTop="100dp"
            android:layout_marginRight="50dp"
            />
        <ImageView
            android:id="@+id/pw_eye2"
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:onClick="mOnClick"
            android:layout_gravity="right"
            android:layout_marginRight="50dp"
            android:layout_marginTop="205dp"
            android:src="@drawable/signuppwicon2"/>


    </FrameLayout>
    <android.widget.Button
        android:id="@+id/change_pw_end"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:layout_marginTop="200dp"
        android:onClick="mOnClick"
        android:background="@drawable/solid_button"
        android:text="비밀번호 변경하기"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold" />


</FrameLayout>