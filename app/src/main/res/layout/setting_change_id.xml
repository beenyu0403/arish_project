<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:theme="@style/ThemeOverlay.Loginlogin.FullscreenContainer">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp">
        <ImageView
            android:id="@+id/img_back8"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_marginLeft="26dp"

            android:src="@drawable/iconblackleft" />
        <TextView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="아이디 변경"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="bold" />


    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="100dp">
        <ImageView
            android:layout_width="60dp"
            android:layout_height="20dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="100dp"
            android:src="@drawable/chang_id_text"/>
        <ImageView
            android:layout_width="370dp"
            android:layout_height="230dp"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/edittext_img"/>

        <EditText
            android:id="@+id/userID"
            android:layout_width="300dp"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="130dp"
            android:background="@drawable/solid_button_st"
            android:ems="10"
            android:hint="아이디"
            android:paddingLeft="30dp"
            android:inputType="textPersonName"
            android:text=""
            android:textSize="15sp" />
        <android.widget.Button
            android:id="@+id/change_id_end"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginTop="100dp"
            android:onClick="mOnClick"
            android:background="@drawable/solid_button"
            android:text="아이디 변경하기"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />


    </FrameLayout>
</FrameLayout>