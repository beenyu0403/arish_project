<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_map"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <fragment
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"/>


    <LinearLayout
        android:id="@+id/layout_mapscreen_search"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >
        <SearchView
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:iconifiedByDefault="false"
            android:queryHint="검색어를 입력하시오"/>
    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom">

        <ImageView
            android:layout_width="400dp"
            android:layout_height="160dp"
            android:src="@drawable/bar_circle"/>
        <ImageView
            android:layout_width="400dp"
            android:layout_height="160dp"
            android:src="@drawable/bar_circle"/>
        <ImageView
            android:layout_width="450dp"
            android:layout_height="160dp"
            android:layout_gravity="right"
            android:alpha="0.4"
            android:src="@drawable/bar_ww"/>
        <ImageView
            android:layout_width="450dp"
            android:layout_height="160dp"
            android:layout_gravity="left"
            android:src="@drawable/bar_ww"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_gravity="bottom"
            android:src="@drawable/bar_nemo2"/>


        <ImageView
            android:id="@+id/home"
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:src="@drawable/homeicon"
            android:layout_gravity="bottom"
            android:onClick="mOnClick"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="50dp"/>
        <ImageView
            android:id="@+id/search"
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:src="@drawable/searchicon"
            android:layout_gravity="bottom"
            android:onClick="mOnClick"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="115dp"/>

        <ImageView
            android:id="@+id/ticket"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/ticketicon2"
            android:layout_gravity="bottom"
            android:onClick="mOnClick"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="155dp"/>
        <ImageView
            android:id="@+id/ticket2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ticketicon"
            android:layout_gravity="bottom"
            android:onClick="mOnClick"
            android:layout_marginBottom="40dp"
            android:layout_marginLeft="171dp"/>
        <ImageView
            android:id="@+id/position"
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:src="@drawable/placeicon"
            android:layout_gravity="bottom"
            android:onClick="mOnClick"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="255dp"/>
        <ImageView
            android:id="@+id/profile_icon"
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:src="@drawable/personicon"
            android:layout_gravity="bottom"
            android:onClick="mOnClick"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="330dp"/>

    </FrameLayout>
</FrameLayout>