<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".setting_alarm">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="95dp">
        <ImageView
            android:id="@+id/img_back8"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_marginLeft="26dp"

            android:src="@drawable/iconblackleft" />
        <TextView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="알림설정"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="bold" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="180dp">
            <TextView
                android:layout_width="80dp"
                android:layout_height="32dp"
                android:layout_marginLeft="30dp"
                android:text="푸시알림"
                android:textColor="@color/white"
                android:gravity="center"
                android:textSize="15dp"
                android:textStyle="bold"
                android:background="@drawable/setting_push_button"
                android:layout_marginBottom="10dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="45dp"
                android:text="서비스 알림"
                android:textColor="@color/black"
                android:layout_marginBottom="5dp"
                android:textSize="15dp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="전시 일정, 시간 등 중요한 서비스 알림을 받습니다."
                android:textSize="11dp"
                android:layout_marginLeft="45dp"
                android:layout_marginBottom="5dp"
                />


            <ImageView
                android:layout_width="370dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:background="@drawable/black_line"

                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="15dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="45dp"
                android:text="마케팅 및 이벤트 알림"
                android:textColor="@color/black"
                android:layout_marginBottom="5dp"
                android:textSize="15dp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="전시 관련 이벤트 알림을 받습니다."
                android:textSize="11dp"
                android:layout_marginLeft="45dp"
                android:layout_marginBottom="3dp"
                />

            <ImageView
                android:layout_width="370dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:background="@drawable/black_line"

                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="120dp"
                android:layout_height="32dp"
                android:layout_marginLeft="30dp"
                android:text="마케팅 수신동의"
                android:textColor="@color/white"
                android:gravity="center"
                android:textSize="15dp"
                android:textStyle="bold"
                android:background="@drawable/setting_m_button"
                android:layout_marginBottom="10dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="45dp"
                android:text="E-mail 수신 동의"
                android:textColor="@color/black"
                android:layout_marginBottom="15dp"
                android:textSize="15dp"
                android:textStyle="bold" />



            <ImageView
                android:layout_width="370dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:background="@drawable/black_line"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="14dp"
                android:text="* 푸시가 오지 않을 경우, 기기의 설정>알림에서 Arish 앱 알림 허용 여부를 확인해주세요."
                android:textSize="10dp"
                android:layout_marginLeft="30dp"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="14dp"
                android:text="* 이메일 주소는 설정>프로필 변경에서 변경 가능합니다."
                android:textSize="10dp"
                android:layout_marginLeft="30dp"
                android:layout_marginBottom="5dp"
                />
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="210dp">

        <ImageView
            android:id="@+id/settal_button1"
            android:onClick="mOnClick"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:visibility="visible"
            android:layout_marginLeft="300dp"
            android:background="@drawable/setting_alarmb"

            />
        <ImageView
            android:id="@+id/settal_button2"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:onClick="mOnClick"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="300dp"
            android:visibility="visible"
            android:background="@drawable/setting_alarmb"

            />
        <ImageView
            android:id="@+id/settal_button3"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:onClick="mOnClick"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="300dp"
            android:visibility="visible"
            android:background="@drawable/setting_alarmb"

            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="210dp">

        <ImageView
            android:id="@+id/settal_button4"
            android:onClick="mOnClick"
            android:layout_width="65dp"
            android:layout_height="50dp"
            android:layout_marginLeft="308dp"
            android:visibility="invisible"
            android:background="@drawable/setting_alarmbp"

            />
        <ImageView
            android:id="@+id/settal_button5"
            android:layout_width="65dp"
            android:layout_height="50dp"
            android:onClick="mOnClick"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="308dp"
            android:visibility="invisible"
            android:background="@drawable/setting_alarmbp"

            />
        <ImageView
            android:id="@+id/settal_button6"
            android:layout_width="65dp"
            android:layout_height="50dp"
            android:onClick="mOnClick"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="308dp"
            android:visibility="invisible"
            android:background="@drawable/setting_alarmbp"

            />

    </LinearLayout>

</FrameLayout>